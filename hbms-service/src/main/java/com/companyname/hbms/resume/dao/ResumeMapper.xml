<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.companyname.hbms.resume.dao.ResumeDao">

  <cache/>

  <insert id="insert" parameterType="com.companyname.hbms.resume.domain.Resume">
    insert into Resume(name, languageId, yn)
    values (#{name, jdbcType=VARCHAR}, #{languageId,jdbcType=INTEGER}, 1)
    <selectKey keyProperty="resumeId" order="AFTER" resultType="java.lang.Long">
      select last_insert_id();
    </selectKey>
  </insert>

</mapper>